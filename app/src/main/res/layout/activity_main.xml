<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3BDC5"
        tools:context=".MainActivity">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.006">

            <Button
                android:id="@+id/button_tab"
                android:layout_width="67dp"
                android:layout_height="35dp"
                android:text="Tab"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_println"
                android:layout_width="67dp"
                android:layout_height="35dp"
                android:text="print"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_if"
                android:layout_width="67dp"
                android:layout_height="35dp"
                android:text='if'
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_for"
                android:layout_width="67dp"
                android:layout_height="35dp"
                android:text='for'
                android:textAllCaps="false"
                android:textSize="12sp" />

        </TableRow>

        <compilers.ybdesire.com.pycompiler.CodeEditText
            android:id="@+id/text_input_code"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:background="#FFFFFF"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:textCursorDrawable="@drawable/black_cursor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.207" />

        <Button
            android:id="@+id/button_compile"
            android:layout_width="101dp"
            android:layout_height="43dp"
            android:text="@string/str_btn_run"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.325"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666" />

        <Button
            android:id="@+id/button_check"
            android:layout_width="101dp"
            android:layout_height="42dp"
            android:text="@string/str_btn_check"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.667" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="101dp"
            android:layout_height="43dp"
            android:text="@string/str_btn_save"
            android:textSize="15sp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.662" />

        <Button
            android:id="@+id/export_btn"
            android:layout_width="101dp"
            android:layout_height="43dp"
            android:text="@string/str_btn_export"
            android:textSize="15sp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.674"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.664"
            />

        <TextView
            android:id="@+id/txt_output"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:scrollbars="vertical"
            android:text="@string/str_txt_output"
            android:textColor="#141823"
            android:textSize="20sp"
            android:windowSoftInputMode="adjustPan"
            app:layout_constraintBottom_toBottomOf="@+id/tableRow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.957" />

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="fill_parent"
            android:layout_height="69dp"
            android:windowSoftInputMode="adjustPan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.984"></TableRow>


    </android.support.constraint.ConstraintLayout>
</ScrollView>